<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Triples" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
        <item name="colorAccent">@color/primary_green</item>
        <item name="android:statusBarColor">@color/card_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Header text styles -->
    <style name="Triples.AppName" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="Triples.AppSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- List item text styles -->
    <style name="Triples.WebsiteUrl" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="Triples.StatusText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Dialog text styles -->
    <style name="Triples.DialogTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="Triples.DialogSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Button styles -->
    <style name="Triples.RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Card styles -->
    <style name="Triples.RoundedCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources> 